<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height_avatar"
    android:background="?selectableItemBackground"
    android:orientation="horizontal">


    <ImageView
        android:id="@id/ivCover"
        android:layout_width="@dimen/listitem_avatar_size"
        android:layout_height="@dimen/listitem_avatar_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listitem_avatar_margin_horizontal"
        android:layout_marginRight="@dimen/listitem_avatar_margin_horizontal"/>

    <ImageView
        android:id="@id/ivOscillator"
        android:layout_width="@dimen/listitem_avatar_size"
        android:layout_height="@dimen/listitem_avatar_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listitem_avatar_margin_horizontal"
        android:layout_marginRight="@dimen/listitem_avatar_margin_horizontal"
        android:src="@drawable/ic_ocillator_animated"
        android:visibility="gone"/>

    <TextView
        android:id="@id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ivCover"
        android:gravity="center_vertical"
        android:padding="@dimen/cardview_content_horizontal_margin"
        android:text="@string/title"
        android:textSize="16sp"
        android:textStyle="normal"/>
</RelativeLayout>
