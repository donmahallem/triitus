<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_detail_horizontal_margin"
        android:layout_marginRight="@dimen/activity_detail_horizontal_margin"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:rowCount="5">

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="@string/title"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="0"
            app:layout_rowSpan="1"/>

        <TextView
            android:id="@id/txtTitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="@string/title"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="0"
            app:layout_rowSpan="1"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="@string/description"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1"/>

        <TextView
            android:id="@id/txtDescription"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="@string/description"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="2"
            app:layout_rowSpan="1"
            />

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="@string/sounds"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="3"
            app:layout_rowSpan="1"/>

        <TextView
            android:id="@id/txtEntries"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="@string/sounds"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="3"
            app:layout_rowSpan="1"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="@string/filesize"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="4"
            app:layout_rowSpan="1"/>

        <TextView
            android:id="@id/txtFileSize"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="32dp"
            android:gravity="center_vertical|fill_horizontal"
            android:paddingLeft="24dp"
            android:text="@string/filesize"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="4"
            app:layout_rowSpan="1"/>
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        style="?buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@id/btnCancel"
            style="?buttonBarNeutralButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/cancel"/>

        <Button
            android:id="@id/btnOk"
            style="?buttonBarPositiveButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok"/>
    </LinearLayout>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@id/contentLoadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>